            <Insets />
         </HBox.margin>
      </JFXButton>
      <JFXButton fx:id="schedules" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#openSchedules" prefHeight="360.0" prefWidth="640.0" ripplerFill="#081a51" text="Schedules" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </JFXButton>
      <JFXButton fx:id="department" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#openDepartment" prefHeight="360.0" prefWidth="640.0" ripplerFill="#081a51" text="Department" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </JFXButton>
   </children>
   <effect>
      <InnerShadow blurType="TWO_PASS_BOX" choke="0.3" height="100.0" radius="44.5" width="80.0" />
   </effect>
</HBox>
