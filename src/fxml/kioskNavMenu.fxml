<?import javafx.scene.layout.HBox?>

<HBox fx:id="navMenu" alignment="BOTTOM_CENTER" styleClass="hboxmenu" stylesheets="@../res/kioskStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NavMenuController">
   <children>
      <JFXButton fx:id="slideshow" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#openSlideshow" prefHeight="360.0" prefWidth="640.0" ripplerFill="#081a51" text="Slideshow" HBox.hgrow="ALWAYS">
