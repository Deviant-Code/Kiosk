      </JFXButton>
      <JFXButton fx:id="polls" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#openPolls" prefHeight="360.0" prefWidth="640.0" ripplerFill="#081a51" text="Polls" HBox.hgrow="ALWAYS">
